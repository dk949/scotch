{
  "build": "cmake --build build -j 4",
  "clean": "make -C build clean",
  "cleanbuild": "bldr reset setup build",
  "config": "$EDITOR .bldr",
  "docs": "cmake --build build --target doxygen-docs",
  "reset": "rm -rf build",
  "run": "./build/bin/scotch ./test/test_2.scot -o build/bin/output.wat",
  "runwasm": "node wasmrunner/wasmrunner.js --very-verbose build/bin/output.wat",
  "test": "./build/bin/tests",
  "setup": "bldr setup:dbg",
  "setup:dbg": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DENABLE_CACHE=ON -DENABLE_DOXYGEN=ON -DENABLE_TESTING=OFF -DENABLE_TRACING=ON",
  "setup:rel": "cmake -B build -DCMAKE_BUILD_TYPE=Release -DENABLE_CACHE=ON -DENABLE_DOXYGEN=ON -DENABLE_TESTING=OFF -DENABLE_TRACING=ON"
}
